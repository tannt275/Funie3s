<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_popup_searchview"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    android:paddingLeft="@dimen/_xxhdpi5dp">

    <ImageView
        android:id="@+id/watchedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/history_search"
        android:src="@drawable/ic_history" />

    <TextView
        android:id="@+id/search_history"
        style="@style/TextNormalContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_xxhdpi10dp"
        android:layout_toEndOf="@id/watchedIcon"
        android:layout_toRightOf="@id/watchedIcon"
        android:ellipsize="marquee"
        android:text="@string/app_name"
        android:textAppearance="?attr/textAppearanceSearchResultTitle" />

</RelativeLayout>